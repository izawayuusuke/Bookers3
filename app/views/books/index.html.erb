<%= render 'layouts/sidebar', user: current_user, book: @book %>

  <div class="col-xs-9">
    <h2>Books</h2>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
      <% @books.each do |book| %>
        <tr class="book_<%= book.id %>">
          <%= render 'favorites/favorites', book: book %>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
