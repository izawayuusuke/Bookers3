<% if @ranking_books.empty? %>
  <p style="font-weight: bold;">ランキングがありません</p>
<% end %>
<table class="table">
  <% @ranking_books.each.with_index(1) do |book, i| %>
    <tr>
      <th><span class="ranking-<%= i %>"><%= i %>位</span></th>
      <td><%= link_to book.title, book_path(book) %></td>
    </tr>
  <% end %>
</table>
