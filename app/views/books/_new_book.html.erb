<%= form_for(book) do |f| %>

  <div class="field row">
    <%= f.label :title %>
    <%= f.text_field :title, class: "col-xs-12 book_title" %>
  </div>

  <div class="field row">
    <%= f.label :opinion %>
    <%= f.text_area :body, class: "col-xs-12 book_body" %>
  </div>

  <div class="field row">
    <%= f.label :tag_list %>
    <%= f.text_field :tag_list, value: book.tag_list.join(','), "data-role" => "tagsinput" , class: "col-xs-12" %>
  </div>

  <div class="actions row">
      <%= f.submit "Create Book", class: "btn btn-primary col-xs-12"%>
  </div>

<% end %>
