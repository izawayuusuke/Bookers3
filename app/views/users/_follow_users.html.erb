<% provide(:title, @title)%>
<h2><%= yield(:title) %> Users</h2>

<div class="row">
  <div class="col-xs-12">
    <table class="table">
      <thead>
        <tr>
          <th>image</th>
          <th>name</th>
          <th colpsan="4"></th>
        </tr>
      </thead>
      <tbody>
        <% users.each do |user| %>
          <tr>
            <td><%= attachment_image_tag user, :profile_image, :fill, 50, 50, class: "image-square, pull-left profile-img", fallback: "no_image.jpg" %></td>
            <td><%= user.name %></td>
            <%= render 'users/follow_form', user: user %>
            <td><%= link_to "Show", user_path(user) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
