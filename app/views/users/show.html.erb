<%= render 'sidebar', user: @user, book: @book %>
	<div class="col-xs-9">
		<h2>Books</h2>
			<table class="table table-hover tableinverse">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Option</th>
						<th></th>
						<th colspan="3"></th>
						</tr>
				</thead>

				<tbody>
					<% @books.each do |book| %>
						<tr>
							<td>
								<%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg', class: "img-square pull-left profile-img", fallback: "no_image.jpg" %>
							</td>
							<td><%= link_to book.title, book_path(book) %></td>
							<td> <%= book.body %> </td>
							<td>コメント数: <%= book.book_comments.count %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
	</div>
</div>
