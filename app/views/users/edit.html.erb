<h2>User info</h2>
  <%= form_for(@user) do |f| %>

  <% if @user.errors.any? %>
		<div id="explanation">
			<h3><%= pluralize(@user.errors.count, "error") %> prohibited this obj from being saved:</h3>
			<ul>
				<% @user.errors.full_messages.each do |message| %>
