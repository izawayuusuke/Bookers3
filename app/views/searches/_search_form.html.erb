<% if user_signed_in? %>
  <div class="row search">
    <div class="col-xs-7 col-xs-offset-5">
      <%= form_tag(search_path, :method => 'get') do %>
        <%= text_field_tag :search %>
        <%= select_tag(:option, options_for_select([["user", "0"],["book", "1"]])) %>
        <%= select_tag(:choice, options_for_select([["完全一致", "0"],["前方一致", "1"],["後方一致", "2"],["部分一致", "3"]]))%>
        <%= submit_tag "Search" %>
      <% end %>
    </div>
  </div>
<% end %>
