<h2>Books search</h2>
<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colpsan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td>
        <%= link_to user_path(book.user) do %>
          <%= attachment_image_tag book.user, :profile_image, :fill, 50,50, class: "img-square pull-left profile-img", fallback: "no_image.png" %></td>
        <% end %>
      <td><%= link_to book.title, book_path(book) %></td>
      <td><%= book.body %></td>
      <%= render 'favorites/favorites', book: book %>
      <td>comments: <%= book.book_comments.count %></td>
    </tr>
    <% end %>
  </tbody>
</table>
